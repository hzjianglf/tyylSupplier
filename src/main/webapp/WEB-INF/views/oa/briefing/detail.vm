<div class="easyui-panel mainborder-Padding" data-options="fit:true,border:false">
    <div id="cc" class="easyui-layout" data-options="fit:true">
        <div data-options="region:'center',border:false" class="mynoborder">
            <form id="editForm" method="post">
                <table class="table-edit">
                    <tr>
                        <td class="fix_td_title">&nbsp;</td>
                        <td class="fix_td_data">&nbsp;</td>
                        <td class="fix_td_title">&nbsp;</td>
                        <td class="fix_td_data">&nbsp;</td>
                    </tr>
                    <tr>
                      <td class="bg-grey">标题</td>
                      <td class="bg-white" colspan="3">
                        $!{esc.html($!{briefing.title})}
                      </td>
                    </tr>
                    <tr>
                      <td class="bg-grey">发布范围</td>
                      <td class="bg-white">
                        $!{briefing.publishType.value}
                      </td>
                      <td class="bg-grey">显示方式</td>
                      <td class="bg-white">
                        $!{briefing.displayType.value}
                      </td>
                    </tr>
                    <tr id="publishDepTr">
                      <td class="bg-grey">部门</td>
                      <td class="bg-white">
                        $!{esc.html($!{briefing.publishDept.deptName})}
                      </td>
					  <td class="bg-grey">类型</td>
                        <td class="bg-white">
							$!{briefing.briefType.value}
						</td>
                    </tr>
                    <tr>
                        <td class="bg-grey">内容</td>
                        <td colSpan="3" class="bg-white"  valign="top"  >
                            <textarea class="ckeditor" id="briefingContent" readonly name="briefingContent" cols="" style="resize:none;width:99%;">$!{briefing.content}</textarea>
                            <script>
                                CKEDITOR.on('instanceReady', function(ev) {
                                    ev.editor.setReadOnly(true);
                                });
                            </script>
                        </td>
                    </tr>
                    <tr>
                      <td class="bg-grey">录入时间</td>
                      <td class="bg-white">
                        $!date.format('yyyy-MM-dd HH:mm',$!{briefing.createDate})
                      </td>
                      <td class="bg-grey">发布时间</td>
                      <td class="bg-white"  class="bg-white" >
                        $!date.format('yyyy-MM-dd HH:mm',$!{briefing.publishDate})
                      </td>
                    </tr>
                    <tr>
                      <td class="bg-grey">附件</td>
                      <td colSpan="3" class="bg-white" attachId="$!{briefing.id}">
                        #formfilemulty("attach", "", "", "", $!{attachMap.get("$briefing.id")},"#defaultDownloadUrl('sysattach')", false, "#defaultUploadUrl('briefingattach')", false)
                      </td>
                    </tr>
                </table>
            </form>
        </div>
        <div data-options="region:'south'" class="bottom-h">
            <div class="bottom-but">
                <ul>
                    <li><a onclick="top.CC.closeCurTab()" class="new-but">关闭</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
#@script()
<script type="text/javascript">
    $(function(){
        CKEDITOR.replace('briefingContent', { height: '310px'});
    })
     
     
</script>
