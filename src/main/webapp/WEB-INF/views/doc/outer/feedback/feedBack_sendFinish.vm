<div class="easyui-panel mainborder-Padding" data-options="fit:true,border:false">
  <div id="cc" class="easyui-layout" data-options="fit:true">
      <div data-options="region:'center'" class="mynoborder">
          <form id="feedBackForm" method="post">
              <input name="id" id="id" type="hidden" value="$!{obj.id}"/>
			  <input id="returnType" type="hidden" value="$!{returnType}"/>
              <table class="table-edit" width="99%" border="0" cellspacing="1" cellpadding="0">
                  <tbody>
                    <tr>
                      <td class="bg-grey" style="width:100px;">公文标题</td>
                      <td class="bg-white" colspan="3">
                        <input type="text" name="title" class="easyui-textbox" data-options="editable:false" style="width:100%;" value="$!esc.html($!{obj.title})"/>
                      </td>
                    </tr>
					<tr>
                        <td class="bg-grey"><span><font color=red>*</font></span>处理结果</td>
                        <td class="bg-white">
                            <label><input type="radio" class="easyui-validatebox" checked required:true name="feedbackType" value="3"/>已办结</label>
							<label><input type="radio" class="easyui-validatebox" required:true name="feedbackType" value="6"/>不办理</label>
							<label><input type="radio" class="easyui-validatebox" required:true name="feedbackType" value="7"/>转阅件</label>
                        </td>
						<td class="bg-grey" id='tdName'><span><font color=red>*</font></span>处理意见</td>
                        <td class="bg-white">
							<div id="content">
                            <input style="width:100%;" id="reason" name="reason" data-options="required:true" class="easyui-textbox" value=""/>
							</div>
						</td>
                    </tr>
					<tr>
                      <td class="bg-grey"><span><font color=red>*</font></span>联系人</td>
                      <td class="bg-white">
                        <input type="text" name="contactName" class="easyui-textbox" data-options="required:true,validType:'maxLength[10]'" style="width:100%;" value="$!esc.html($!{currentUser.userName})"/>
                      </td>
					   <td class="bg-grey"><span><font color=red>*</font></span>联系电话</td>
                      <td class="bg-white">
                        <input type="text" name="contactPhone" class="easyui-numberbox" data-options="required:true,min:0" style="width:100%;" value="$!{currentUser.mobile}"/>
                      </td>
                    </tr>
                 
                  </tbody>
              </table>
          </form>
      </div>
      <div data-options="region:'south'" style="height:52px;padding-top:15px; background-color: #F4F3F3;">
          <div class="bottom-but-dialog">
              <ul>
                  <li><a onclick="send()" class="new-but">发送</a></li>
                  <li><a onclick="back()" class="new-but">关闭</a></li>
              </ul>
          </div>
      </div>
  </div>
</div>
 
#@script()
<script type="text/javascript">

    $('input[name="feedbackType"]').on('click',function(){
    					var level = $(':radio[name="feedbackType"]:checked').val();
    					if(level == 3){
    						$("#tdName").text('');
							$("#reason").textbox("setValue", "");
    						$("#tdName").append('<span><font color=red>*</font></span>处理意见');
    					}else if(level == 6){
							$("#content").show();
    						$("#tdName").text('');
    						$("#tdName").append('<span><font color=red>*</font></span>不办理原因');
							$("#reason").textbox("setValue", "");
    					}else if(level == 7){
							$("#content").show();
    						$("#tdName").text('');
    						$("#tdName").append('<span><font color=red>*</font></span>转阅件原因');
							$("#reason").textbox("setValue", "");
    					}
                });
	
	
	
	$(function(){
		//$("#content").hide();
	});
	 

	　
    //返回
    function back() {
        $('#editWindow').window('close');
    }

    //发送
    function send(){
        if($("#feedBackForm").form('validate')) {

        top.CC.loading("发送中...");
          $.post("$link.getContextURL()/doc/outer/saveFeedBack.json",$("#feedBackForm").serialize(),function(result){
            top.CC.loaded();
            if(result.id){
              $('#editWindow').window('close');
              top.CC.messager({
                  title:'提示',
                  msg:'发送成功！'
              });
			  
			  if("docDoing" == $("#returnType").val()){
			  	top.CC.addTab({title:'公文办理查询',url:'$link.getContextURL()/doc/outer/listReceiveDoing'});
			  }else{
			  	top.CC.addTab({title:'已签收查询',url:'$link.getContextURL()/doc/outer/listSigned'});
			  }
			  
        	  top.CC.closeTab('公文详情');
            }else{
              top.CC.messager({
                  title:'提示',
                  msg:'服务器连接不上'
              });
            }
          });
		  
		  
        }
    }
	  
</script>
#end
