<div class="easyui-layout" fit="true">
    #*
    <div class="cc-tableWrap" data-options="region:'north',border:false" >
        <div id="tb" >
            <form id="exportChartForm" action="$!{link.getContextPath()}/doc/docstatis/export/exportChart" method="post">
                <input type="hidden" name="svgCode" id="svgCode">
                <input type="hidden" name="chartTitle" id="chartTitle">
                <table class="table-edit" width="99%" border="0">
                   <tr align="center">
                        <td class="bg-grey" align="right" style="width:80px;">展示方式</td>
                        <td class="bg-white" align="left">
                            <label><input type="radio" name="displayType" value="2" >直方图</label>
                            <label><input type="radio" checked  name="displayType" value="3" >饼图</label>
                        </td>
                    </tr>
                </table>
                <a href="javascript:;" class="easyui-linkbutton" plain="true" onclick="exportChart()"
                    iconCls="icon-download-alt" >导出</a>
            </form>
        </div>
    </div>
    *#
    <div class="cc-tableWrap" data-options="region:'center',border:false" style="padding:5px;">
        <div id="container" style="min-width:700px;height:350px"></div>
    </div>
</div>
#@script()
<script type="text/javascript">

    // 导出图表图片
    function exportChart(){
        var chart = $("#container").highcharts();
        $("#chartTitle").val(chart.title.textStr);
        $("#svgCode").val(chart.getSVG());
        $("#exportChartForm").submit();
    }

    $(function () {
        $('#container').highcharts({
            chart: {
                type: 'pie',
                plotBackgroundColor: null,
                plotBorderWidth: null,
                plotShadow: false
            },
            title: {
                text: '$!{showTitle} 办理数量统计饼图'
            },
            subtitle: {
                text: '统计日期：$!date.get("yyyy年MM月dd日")'
            },
            tooltip: {
                formatter: function() {
                  return '<b>'+ this.point.name +'</b>: '+ Highcharts.numberFormat(this.percentage, 1) +'% ('+
                     Highcharts.numberFormat(this.y, 0, ',') +' 件)';
                }
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    dataLabels: {
                        enabled: true,
                        color: '#000000',
                        connectorColor: '#000000',
                        formatter: function() {
                          return '<b>'+ this.point.name +'</b>: '+ Highcharts.numberFormat(this.percentage, 1) +'% ('+
                             Highcharts.numberFormat(this.y, 0, ',') +' 件)';
                        }
                    }
                }
            },
            credits: {
                enabled: false     //去掉highcharts网站url
            },
            exporting : {
                enabled: false     //去掉右上角导出按钮
            },
            series: [{
                name: '信息来源',
                data: $!datas
            }]
        });
    });

     // 切换统计结果显示
    $(':radio[name="displayType"]').on('change', function () {
        toggleTableDiagram();
    });
</script>
<script src="lib/highcharts-4.2.3/js/highcharts.js" type="text/javascript"></script>
<script src="js/exporting.js" type="text/javascript"></script>
#end