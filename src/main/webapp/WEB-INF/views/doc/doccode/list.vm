<div class="easyui-layout" fit="true">
    <div id="tb" class="top-menu datagrid-toolbar toolbar-borderbottom">
        <a href="javascript:;" class="easyui-linkbutton" iconCls="icon-add"
        plain="true">新增</a>
        <a href="javascript:;" class="easyui-linkbutton" iconCls="icon-edit"
                plain="true">修改</a>
        <a href="javascript:;" class="easyui-linkbutton l-btn-plain-remove" iconCls="icon-remove"
                plain="true">删除</a>
        <i></i>
        <a onclick="$('#searchDialog').css('display','block');$('#searchDialog').window('center');$('#searchDialog').window('open');"
             class="easyui-linkbutton l-btn-plain-search" data-options="iconCls:'icon-search',plain:true">查询</a>
        <a onclick="top.CC.closeCurTab()"
             class="easyui-linkbutton l-btn-plain-quit" data-options="iconCls:'icon-quit-small',plain:true">关闭</a>
    </div>
    <div class="cc-tableWrap" data-options="region:'center',border:false" style="padding:5px;">
        <table id="dg" data-options="nowrap:false" style="width:99%;">
            <thead>
            <tr>
                <th style="width:300px" data-options="field:'codeName'">公文字号</th>

				#if($!{type} == 2)
				<th style="width:400px;" data-options="field:'docTemplate'" formatter="formatDocTemplate">模板</th>
				<th style="width:100px;" data-options="field:'docCate'">文种</th>
				#end
                <th style="width:300px;" data-options="field:'remark'">说明</th>
                <th style="width:100px;" data-options="field:'codeSort'">排序</th>
            </tr>
            </thead>
        </table>
    </div>
    <div id="searchDialog" class="easyui-dialog  dialog-tc" title="查询条件" data-options="modal:true,closed:true,collapsible:false,minimizable:false,maximizable:false,buttons:'#bnts'"
         style="width:500px;height:180px;padding:20px 10px; background-color:#f4f4f4;display:none">
        <form id="queryForm">
            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td style="text-align: right">公文字号：</td>
                    <td><input id="codeName" name="$qc.like('codeName')" style="width:350px;" class="easyui-textbox" /></td>
                </tr>
            </table>
         </form>
        <div id="bnts" style="top:0px; height:25px; width:auto;">
            <a class="new-but" onclick="formSerach()">确定</a>
            <a class="new-but" onclick="reset()">重置</a>
        </div>
    </div>
</div>
<div id="editWindow" class="easyui-window" title="编辑" style="width:580px;height:340px;padding:5px"
    data-options="closed:true,modal:true,minimizable:false,maximizable:false,collapsible:false">
</div>
#parse("doc/doccode/crud.js.vm")
#@script()
<script type="text/javascript">

    var _baseUrl = '$link.getContextURL()/doc/doccode';

    var _listJsonUrl = '/list.json?$qc.equal("codeType")=$!{type}';

    var _newJsonUrl = '/new?type=$!{type}';

    function formSerach() {
        $('#searchDialog').window('close');
        $('#dg').datagrid('reload');
    }

    function reset(){
        var _qf = $("#queryForm");
        _qf.form("clear");
        $(".easyui-combobox",_qf).each(function(){
            $(this).combobox("select"," ");
        });
    }
	function formatDocTemplate(obj){
	    if (obj) {
           return obj.templateName;
        } else {
           return "";
        }
    };
</script>
#end