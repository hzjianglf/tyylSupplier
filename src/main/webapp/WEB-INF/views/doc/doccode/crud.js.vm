#@script()
<script>
    //全局变量覆盖：_baseUrl，_delJsonUrl,_newJsonUrl,_editJsonUrl,_listJsonUrl

    //对页面的条件查询/查询的function()方法
    $(document).ready(function(){
        var _datagrid = $("#dg");
        var _querForm = $("#queryForm");
        var _toolbar = $("#tb");

        //查询相关方法
        var _btnSearch = $("[iconCls='icon-search']",_querForm);
        var _btnClear = $("[iconCls='icon-undo']",_querForm);
        if(_btnSearch){
            _btnSearch.on('click',formSerach);
        }
        if(_btnClear){
            _btnClear.on('click',reset);
        }
        function addPageCondition(param){
            $.extend(param,getConditions());
        }
        function getConditions(){
            var f = _querForm.serializeArray();
            var searchConditions = {};
            for(var i = 0;i< f.length;i++){
                searchConditions[f[i].name] = f[i].value;
            }
            return searchConditions;
        }
        function formSerach() {
            _datagrid.datagrid('reload');
        }
        function reset(){
            var _qf = $("#queryForm");
            _qf.form("clear");
            $(".easyui-combobox",_qf).each(function(){
                $(this).combobox("select"," ");
            });
        }

        //工具条操作
        var _btnAdd = $("[iconCls='icon-add']",_toolbar);
        var _btnDelete = $("[iconCls='icon-remove']",_toolbar);
        var _btnEdit = $("[iconCls='icon-edit']",_toolbar);
        if(_btnAdd){
            _btnAdd.on("click",add);
        }
        if(_btnDelete){
            _btnDelete.on("click",del);
        }
        if(_btnEdit){
            _btnEdit.on("click",edit);
        }

        function edit(){

            var rows = $("#dg").datagrid("getChecked");
            if(rows){
                if (rows.length < 1) {
                    top.CC.messager({
                        title: '错误',
                        msg: '请选择至少一条数据进行修改!'
                    });
                } else if (rows.length > 1) {
                    top.CC.messager({
                        title: '错误',
                        msg: '只能对一条数据进行修改!'
                    });
                } else {
                    var id = "";
					var codeType = "";
                    for(var i=0;i<rows.length;i++){
                        if(i==rows.length-1){
                            id += rows[i].id;
							codeType += rows[i].codeType;
                        }
                    }
					
					if("收文"==codeType){
						codeType = 1;
						//如果是新建收文，窗口高度相对应的小点（字段少）
						$("#editWindow").height(200);
						}
					else{
						codeType = 2;
						}
					
                    var url = '$link.getContextURL()/doc/doccode/edit?id=' + id + '&codeType=' + codeType;
                    $('#editWindow').window('open');
                    $('#editWindow').window('refresh',url);
                }

            } else {
                top.CC.messager({
                    title: '错误',
                    msg: '服务器连接不上!'
                });
            }

        }
        function del(){
            var rows = $("#dg").datagrid("getChecked");
            if(rows && rows.length > 0){
                $.messager.confirm('警告','确定删除所选公文字号吗?',function(r){
                    if (r){
                        var ids = "";
                        for(var i=0;i<rows.length;i++){
                            if(i==rows.length-1){
                                ids += rows[i].id;
                            }else{
                                ids += rows[i].id + ",";
                            }
                        }
                        top.CC.loading("删除中，请稍后...");
                        $.post(_baseUrl + (_delJsonUrl || '/delete.json'),{ids:ids},function(result){
                            if (result.success){
                                top.CC.loaded();
                                $('#dg').datagrid('reload'); // reload the user data
                                top.CC.messager({ // show error message
                                    title: '成功',
                                    msg: '删除成功!'
                                });
                            } else {
                                top.CC.messager({ // show error message
                                    title: '错误',
                                    msg: result.errorMsg
                                });
                            }
                        },'json');
                    }
                });
            } else {
                top.CC.messager({
                    title: '错误',
                    msg: '请选择至少一条数据进行删除!'
                });
            }

        }

        function add(){
			//如果是新建收文，窗口高度相对应的小点（字段少）
			if("1"==$!{type}){
				$("#editWindow").height(200);
			}
			 
            $('#editWindow').window('open');
            $('#editWindow').window('refresh','$link.getContextURL()/doc/doccode' + _newJsonUrl);
        }

        //初始化datagrid
        _datagrid.datagrid({
            loadFilter: datagridHtmlEncode,
            fitColumns:false,//列宽自适应
            fit:true,//自适应
            nowrap:false, //不可换行
            rownumbers:true,//行号
            singleSelect:true,//单选
            idField:'id',
            pagination:true,//显示分页工具条
            toolbar:'#tb',//工具条
            pageSize:20,//每页记录数
            pageList:[20,30],//可选每页记录数
            url:_baseUrl + (_listJsonUrl || '/list.json'),//获取数据的url
            onBeforeLoad:addPageCondition//提交查询时追加翻页条件
        });
    });
    var _baseUrl, _delJsonUrl, _newJsonUrl, _editJsonUrl, _listJsonUrl, _detailJsonUrl;

    //行内操作的方法，编辑、详情
    var _datagrid = $("#dg");
    var _toolbar = $("#tb");
    function operaterFormatter(value,row,index){
        return $(".cc-operateColum",_datagrid.parents(".cc-tableWrap")).html();
    }
    function getRowIdByDom(dom){

        var tr =$(dom).parent().parent().parent();
        return tr.attr("datagrid-row-index");
    }

</script>
#end