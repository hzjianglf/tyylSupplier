<div class="easyui-layout" fit="true">
    <div id="tb" class="top-menu datagrid-toolbar toolbar-borderbottom">
        <a href="javascript:;" class="easyui-linkbutton" iconCls="icon-add" onclick="newPage()"plain="true">新增</a>
        <a href="javascript:;" class="easyui-linkbutton" iconCls="icon-edit" onclick="editPage()" plain="true">修改</a>
        <a href="javascript:;" class="easyui-linkbutton l-btn-plain-remove" iconCls="icon-remove" plain="true" onclick="del()">删除</a>
        <i></i>
        <a  onclick="$('#searchDialog').css('display','block');$('#searchDialog').window('center');$('#searchDialog').window('open');"
             class="easyui-linkbutton l-btn-plain-search" data-options="iconCls:'icon-search',plain:true">查询</a>
        <a  onclick="top.CC.closeCurTab()"
            class="easyui-linkbutton l-btn-plain-quit" data-options="iconCls:'icon-quit-small',plain:true">关闭</a>
    </div>
    <div class="cc-tableWrap" data-options="region:'center',border:false" style="padding:5px;">
        <table id="dg" data-options="nowrap:false" style="width:99%;">
            <thead>
            <tr>
				<th field="ck" data-options="checkbox:true"></th>
                <th style="width:47%" data-options="field:'basicType',formatter:detailUrl,sortable:true">类型</th>
                <th style="width:8%" data-options="field:'basicName'">名称</th>
                <th style="width:12%" data-options="field:'basicCode',sortable:true">编号</th>
            </tr>
            </thead>
        </table>
    </div>
    <div  id="searchDialog" class="easyui-dialog  dialog-tc" title="查询条件" data-options="modal:true,closed:true,collapsible:false,minimizable:false,maximizable:false,buttons:'#bnts'"
         style="width:400px;height:200px;padding:20px 10px; background-color:#f4f4f4;display:none">
        <form id="queryForm">
            <table width="100%" border="0" cellspacing="0" cellpadding="0">
				<tr>
					<td style="text-align: right">类型：</td>
					<td>
						<select name="$qc.equal('basicType')" class="easyui-combobox" id="basicType"  data-options="required:true,editable:false" panelheight="auto" style="width:200px;"/>
							#formoption("$!{obj.basicType}" $dict.BasicType)
                    	</select>
					</td>
                </tr>
            </table>
         </form>
        <div id="bnts" style="top:0px; height:25px; width:auto;">
            <a class="new-but" onclick="formSerach()">确定</a>
            <a class="new-but" onclick="reset()">重置</a>
        </div>
    </div>
</div>
<div id="editWindow" class="easyui-window" title="设置" style="width:500px;height:300px;padding:5px"
        data-options="closed:true,modal:true,minimizable:false,maximizable:false,collapsible:false">
</div>

#parse("doc/archives/basic/crud.js.vm")
#@script()
<script type="text/javascript">

    var _baseUrl = '$link.getContextURL()/doc/archives/basic';
    var _listJsonUrl = '/listMaintain.json';
    var _newJsonUrl = '/new';

    $("a[select-dialog]").each(function() {
        $(this).click(function(){
            var $this = $(this);
            var _callbackname = $this.attr("callback");
            var _url = $this.attr("select-dialog");
            var _callback_fn = window[_callbackname];
            var dfn = top.window.openSelectDialogFrameDialog;
            if (typeof dfn === "function") {
                dfn(_url, _callback_fn);
            }
            return false;
        })
    });

    function newPage(){
        $('#editWindow').window('open');
        $('#editWindow').window('refresh','$link.getContextURL()/doc/archives/basic/new');
    }

    function editPage(){
        var rows = $("#dg").datagrid("getChecked");
            if(rows){
                if (rows.length < 1) {
                    top.CC.messager({
                        title: '错误',
                        msg: '请选择至少一条数据进行修改!'
                    });
                } else if (rows.length > 1) {
                    top.CC.messager({
                        title: '错误',
                        msg: '只能对一条数据进行修改!'
                    });
                } else {
                    var basicId = "";
                    for(var i=0;i<rows.length;i++){
                        if(i==rows.length-1){
                            basicId += rows[i].id;
                        }
                    }
                    $('#editWindow').window('open');
                    $('#editWindow').window('refresh','$link.getContextURL()/doc/archives/basic/edit?id='+basicId);
                }

            } else {
                top.CC.messager({
                    title: '错误',
                    msg: '服务器连接不上!'
                });
            }

    }

    function save(){
        if($("#editForm").form('validate')) {
            $.post("$link.getContextURL()/doc/archives/basic/save.json",$("#editForm").serialize(),function(result){
              if(result.id){
                $('#id').val(result.id);
                $('#editWindow').window('close');
                $('#dg').datagrid('reload');
                top.CC.messager({
                    title:'提示',
                    msg:'保存成功！'
                });
              }else{
                top.CC.messager({
                    title:'提示',
                    msg:'服务器连接不上'
                });
              }
            });
        }
    }

    function del(){
            var rows = $("#dg").datagrid("getChecked");
            if(rows && rows.length > 0){
                $.messager.confirm('警告','确定删除这些记录吗?',function(r){
                    if (r){
                        var ids = "";
                        for(var i=0;i<rows.length;i++){
                            if(i==rows.length-1){
                                ids += rows[i].id;
                            }else{
                                ids += rows[i].id + ",";
                            }
                        }
                        $.post('$link.getContextURL()/doc/archives/basic/delete.json',{ids:ids},function(result){
                            if (result.success){
                                $('#dg').datagrid('reload'); // reload the user data
                                $('#dg').datagrid('uncheckAll');
                                top.CC.messager({ // show error message
                                    title: '成功',
                                    msg: result.success
                                });
                            } else {
                                top.CC.messager({ // show error message
                                    title: '错误',
                                    msg: result.errorMsg
                                });
                            }
                        },'json');
                    }
                });
            } else {
                top.CC.messager({
                    title: '错误',
                    msg: '请选择至少一条数据进行删除!'
                });
            }

        }

        function formSerach() {
        $('#searchDialog').window('close');
        $('#dg').datagrid('reload');
    }

    function reset(){
        var _qf = $("#queryForm");
        _qf.form("clear");
        $(".easyui-combobox",_qf).each(function(){
            $(this).combobox("select"," ");
        });
    }
</script>
#end