#@script()
<script type="text/javascript">

    var _baseUrl = '$link.getContextURL()/oa/personal/';
    #if( $type == 'query' )
        var _listJsonUrl = '/querylist.json';
    #else
        var _listJsonUrl = '/list.json';
    #end
    var _newJsonUrl = '/new';

    $("a[select-dialog]").each(function() {
        $(this).click(function(){
            var $this = $(this);
            var _callbackname = $this.attr("callback");
            var _url = $this.attr("select-dialog");
            var _callback_fn = window[_callbackname];
            var dfn = top.window.openSelectDialogFrameDialog;
            if (typeof dfn === "function") {
                dfn(_url, _callback_fn);
            }
            return false;
        })
    });

    function newPage(){
        $('#editWindow').window('open');
        $('#editWindow').window('refresh','$link.getContextURL()/oa/personal/new');
    }




    function formSerach() {
        $('#searchDialog').window('close');
        $('#dg').datagrid('reload');
    }

     function editPage(){
        var rows = $("#dg").datagrid("getChecked");
            if(rows){
                if (rows.length < 1) {
                    top.CC.messager({
                        title: '错误',
                        msg: '请选择至少一条数据进行修改!'
                    });
                } else if (rows.length > 1) {
                    top.CC.messager({
                        title: '错误',
                        msg: '只能对一条数据进行修改!'
                    });
                } else {
                    var id = "";
                    for(var i=0;i<rows.length;i++){
                        if(i==rows.length-1){
                            id += rows[i].id;
                        }
                    }
                    $('#editWindow').window('open');
                    $('#editWindow').window('refresh','$link.getContextURL()/oa/personal/edit?id='+id);
                }

            } else {
                top.CC.messager({
                    title: '错误',
                    msg: '服务器连接不上!'
                });
            }

    }

     function del(){
            var rows = $("#dg").datagrid("getChecked");
            if(rows && rows.length > 0){
                $.messager.confirm('警告','确定删除这些记录吗?',function(r){
                    if (r){
                        var ids = "";
                        for(var i=0;i<rows.length;i++){
                            if(i==rows.length-1){
                                ids += rows[i].id;
                            }else{
                                ids += rows[i].id + ",";
                            }
                        }
                        $.post('$link.getContextURL()/oa/personal/delete.json',{ids:ids},function(result){
                            if (result.success){
                                $('#dg').datagrid('reload'); // reload the user data
                                $('#dg').datagrid('uncheckAll');
                                top.CC.messager({ // show error message
                                    title: '成功',
                                    msg: result.success
                                });
                            } else {
                                top.CC.messager({ // show error message
                                    title: '错误',
                                    msg: result.errorMsg
                                });
                            }
                        },'json');
                    }
                });
            } else {
                top.CC.messager({
                    title: '错误',
                    msg: '请选择至少一条数据进行删除!'
                });
            }

        }



</script>
#end