        <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr>
                <td style="text-align: right">标题：</td>
                <td><input id="title" style="width:260px;" name="title" class="easyui-textbox" /></td>
            </tr>
            <tr>
                <td style="text-align: right">公文类型：</td>
                <td>
                    <select name="businessType" id="businessType" class="easyui-combobox" data-options="editable:false" style="width:120px;" panelheight="auto">
