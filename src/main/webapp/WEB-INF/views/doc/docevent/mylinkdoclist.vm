<link rel="stylesheet" type="text/css" href="$link.getContextURL()/css/doc/listicon.css"/>
<div class="easyui-layout" fit="true">
<div id="tb" class="top-menu datagrid-toolbar toolbar-borderbottom">
    <a href="javascript:;" class="easyui-linkbutton" iconCls="icon-reminders" onclick="reminders()" plain="true">催办</a>
    <a href="javascript:;" class="easyui-linkbutton" iconCls="icon-download-alt" onclick="exportExcel()" plain="true">导出</a>
    <i></i>
    <a  onclick="$('#searchDialog').css('display','block');$('#searchDialog').window('center');$('#searchDialog').window('open');"
        class="easyui-linkbutton l-btn-plain-search" data-options="iconCls:'icon-search',plain:true">查询</a>
    <a  onclick="top.CC.closeCurTab()"
        class="easyui-linkbutton l-btn-plain-quit" data-options="iconCls:'icon-quit-small',plain:true">关闭</a>
</div>
<div class="cc-tableWrap" data-options="region:'center',border:false" style="padding:5px;">
    <table id="dg" data-options="nowrap:false" style="width:99%;">
        <thead>
        <tr>
            <th style="width:30%;" data-options="field:'title',editor:'text',formatter:detailUrl,sortable:true">公文标题</th>
            <th style="width:10%;" data-options="field:'createDateShow',sortable:true">发文时间</th>
            <th style="width:15%;" data-options="field:'sendUnit'">来文单位</th>
            <th style="width:10%;" data-options="field:'restTime',formatter:restTimeFormatter,sortable:true">总剩余时间</th>
            <th style="width:10%;" data-options="field:'deptName'">主办处室</th>
            <th style="width:10%;" data-options="field:'creatorName'">拟稿人</th>
			<th style="width:8%;" data-options="field:'nodeName',editor:'text',formatter:flowUrl">在办环节</th>
            <th style="width:5%;" data-options="field:'instStatus'">状态</th>
        </tr>
        </thead>
    </table>
</div>
<div  id="searchDialog" class="easyui-dialog  dialog-tc" title="查询条件" data-options="modal:true,closed:true,collapsible:false,minimizable:false,maximizable:false,buttons:'#bnts'"
     style="width:500px;height:430px;padding:20px 10px; background-color:#f4f4f4;display:none;">
    <form id="queryForm">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr>
                <td style="text-align: right">公文标题：</td>
                <td colspan="3"><input id="title" style="width:320px;" name="title" class="easyui-textbox" /></td>
            </tr>
			<tr>
                <td align="right">来文单位：</td>
                <td align="left" style="width:120px;"><input name="sendUnit" style="width:120px;" class="easyui-textbox" /></td>
                <td align="right" style="width:80px;">拟稿人：</td>
                <td align="left"><input name="creatorName" style="width:100px;" class="easyui-textbox" /></td>
            </tr>
            <tr>
                <td style="text-align: right">公文类型：</td>
                <td >
                    <select name="businessType" id="businessType" class="easyui-combobox" data-options="editable:false" style="width:120px;" panelheight="auto">
						#set($arr = [1, 2, 3, 5])
						#formoptioncontain("" $dict.WfBusinessType $arr)
                    </select>
                </td>
				<td align="right">状态：</td>
                <td align="left">
                    <select name="instStatus" class="easyui-combobox" data-options="editable:false" style="width:100px;"
                        panelheight="auto">
						#set($arr = [0, 1])
						#formoptioncontain("" $dict.WfInstStatus $arr)
                    </select>
                </td>
            </tr>
            <tr>
                <td align="right">发文时间：</td>
                <td colspan="3">
                    <input name="createDateBegin" class="easyui-datebox" data-options="editable:false" style="width:120px;">
						&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;至&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <input name="createDateEnd" class="easyui-datebox" data-options="editable:false" style="width:120px;">
                </td>
            </tr>
			<tr>
                <td align="right">限办日期：</td>
                <td colspan="3">
                    <input name="expiryDateBegin" class="easyui-datebox" data-options="editable:false" style="width:120px;">
						&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;至&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <input name="expiryDateEnd" class="easyui-datebox" data-options="editable:false" style="width:120px;">
                </td>
            </tr>
			<tr>
                <td align="right">主办处室：</td>
                <td align="left" style="width:140px;"><input name="deptName" style="width:120px;" class="easyui-textbox" /></td>
                <td align="right" style="width:80px;">经办类型：</td>
                <td align="left">
					<select name="queryReadFlag" class="easyui-combobox" data-options="editable:false" style="width:100px;"
                        panelheight="auto">
						<option value="" selected>全部</option>
                        <option value="1">阅知</option>
                        <option value="0">办理</option>
                    </select>
				</td>
            </tr>
			<tr>
                <td align="right">经办部门：</td>
                <td align="left" style="width:140px;">
					<input id="dealerDeptId" name="dealerDeptId" type="hidden"/>
                    <input id="dealerDeptName" name="dealerDeptName" style="width:100px;" class="easyui-textbox" readonly "/>
                    <a id="selectDepDialog" href="javascript:;" iconcls="icon-search" plain="true"
                        callback=fnSelectDepCallback class="easyui-linkbutton" select-dialog="$link.getContextURL()/select/Dep/selectDepTree"></a>

				</td>
                <td align="right" style="width:80px;">经办人：</td>
                <td align="left">
					<input style="width:100px;" id="dealer" name="dealer" class="easyui-textbox" readonly value="$!{currentUser.userName}"/>
                    <input id="dealerId" name="dealerId" type="hidden" value="$!{currentUser.id}"/>
                    <a id="selectDepDialog" href="javascript:;" callback=fnSelectManSingleCallback class="easyui-linkbutton" plain="true"
                                iconCls="icon-search" select-dialog="$link.getContextURL()/select/selectSingleManClassify"></a>
				</td>
            </tr>
        </table>
     </form>
    <div id="bnts" style="top:0px; height:25px; width:auto;">
        <a class="new-but" onclick="formSerach()">确定</a>
        <a class="new-but" onclick="reset()">重置</a>
    </div>
</div>
</div>
<div id="editWindow" class="easyui-window" title="流程图" style="width:900px;height:520px;padding:5px;overflow:hidden;"
        data-options="closed:true,modal:true,minimizable:false,maximizable:false,collapsible:false">
    <iframe id="showGooFlow">

	</iframe>
</div>
