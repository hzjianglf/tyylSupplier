<div class="easyui-panel mainborder-Padding" data-options="fit:true,border:false">
    <div class="easyui-layout" fit="true">
        <div id="tb" class="top-menu datagrid-toolbar toolbar-borderbottom">
            ## <a href="javascript:;" class="easyui-linkbutton" iconCls="icon-add" plain="true">新增</a>
            ## <a href="javascript:;" class="easyui-linkbutton" iconCls="icon-edit" plain="true">修改</a>
            ## <a href="javascript:;" class="easyui-linkbutton" iconCls="icon-remove" plain="true">删除</a>
            ## <i></i>
            <a  onclick="$('#searchDialog').css('display','block');$('#searchDialog').window('center');$('#searchDialog').window('open');"
                 class="easyui-linkbutton l-btn-plain-search" data-options="iconCls:'icon-search',plain:true">查询</a>
            #if("$!{receiveFlag}" == "1")## 收文查询
            <a href="javascript:;" class="easyui-linkbutton" iconCls="icon-batchSign"
				 plain="true">批量签收</a>
            #else #end
			
			<a  onclick="top.CC.closeCurTab()"
                 class="easyui-linkbutton l-btn-plain-search" data-options="iconCls:'icon-quit-small',plain:true">关闭</a>
        </div>
        <div class="cc-tableWrap" data-options="region:'center',border:false" style="padding:5px;">
            <table id="dg" data-options="nowrap:false" style="width:99%;">
                <thead>
                <tr>
                    <th style="width:5" data-options="field:'attachFlag',formatter:attFlag"><img src='images/attach.png' title='有附件'/></th>
                    
                    #if("$!{receiveFlag}" == "1")## 收文查询
					<th style="width:36%" data-options="field:'title',formatter:detailUrl">公文标题</th>
                    <th style="width:20%" data-options="field:'senderAncestorName'">来文单位</th>
					<th style="width:15%" data-options="field:'sendTimeShow'">发送时间</th>
					<th style="width:10%" data-options="field:'limitTimeShow',formatter:limitTimeFormatter">总剩余天数</th>
					<th style="width:5%" data-options="field:'documentType'">公文类型</th>
					<th style="width:10%" data-options="field:'id',align:'center',formatter:rowformater">操作</th>  
                    #elseif("$!{receiveFlag}" == "0")## 发文查询
					<th style="width:36%" data-options="field:'title',formatter:detailUrl">公文标题</th>
                    <th style="width:20%" data-options="field:'secondaryUnitIdentifierName'">收文单位</th>
					<th style="width:8%" data-options="field:'senderName'">发送人</th>
					<th style="width:12%" data-options="field:'sendTimeShow'">发送时间</th>
					<th style="width:5%" data-options="field:'documentType'">公文类型</th>
					<th style="width:12%" data-options="field:'limitTimeShow'">限办时间</th>
					<th style="width:5%" data-options="field:'envStatus',formatter:statusFormatter">反馈情况</th>
                    #else #end
				 
                </tr>
                </thead>
            </table>
			<div class="cc-operateColum">
              <a  href='javascript:;' class="easyui-linkbutton" iconCls="icon-edit" 
                plain="true" onclick="feedBackDialog('__id__')">签收
              </a>
			  <a  href='javascript:;' class="easyui-linkbutton" iconCls="icon-edit" 
                plain="true" onclick="returnEnvelope('__id__')">退回
              </a>
            </div>
        </div>
        <div id="searchDialog" class="easyui-dialog  dialog-tc" title="查询条件" data-options="modal:true,closed:true,collapsible:false,minimizable:false,maximizable:false,buttons:'#bnts'"
             style="width:500px;height:320px;padding:20px 10px; background-color:#f4f4f4;display:none">
            <input type="hidden" name="$qc.equal('receiveFlag')" value="$!{receiveFlag}" id="receiveFlag" class="extra-condition"/>
            <form id="queryForm">
                <table width="100%" border="0" cellspacing="0" cellpadding="0">
                    <tr>
                        <td align="right">文件标题：</td>
                        <td><input id="title" name="$qc.like('title')" style="width:350px;" class="easyui-textbox" /></td>
                    </tr>
                    #if("$!{receiveFlag}" == "0")## 发文查询
                    <tr>
                        <td align="right">收文单位：</td>
                        <td><input id="secondaryUnitIdentifierName" name="$qc.like('secondaryUnitIdentifierName')" style="width:350px;" class="easyui-textbox" /></td>
                    </tr>
                    <tr>
                        <td align="right">发送时间：</td>
                        <td align="left">
                            <input name="$qc.greaterThanOrEqualTo('sendTime')" class="easyui-datebox" value="$!{firstDay}" data-options="editable:false" style="width:150px;">
                            至
                            <input name="$qc.lessThanOrEqualTo('sendTime')" class="easyui-datebox" value="$!{lastDay}" data-options="editable:false" style="width:150px;">
                        </td>
                    </tr>
                    #elseif("$!{receiveFlag}" == "1")## 收文查询
                    ## <tr>
                    ##     <td align="right">发文处室：</td>
                    ##     <td>
                    ##         <input id="department" name="$qc.like('publishDept.deptName')" class="easyui-textbox" readonly style="width:350px;" />
                    ##     </td>
                    ## </tr>
                    ## <tr>
                    ##     <td align="right">拟稿人：</td>
                    ##     <td>
                    ##         <input id="department" name="$qc.like('publishDept.deptName')" class="easyui-textbox" readonly style="width:350px;" />
                    ##     </td>
                    ## </tr>
                    <tr>
                        <td align="right">来文单位：</td>
                        <td>
                            <input id="senderAncestorName" name="$qc.like('senderAncestorName')" class="easyui-textbox" style="width:350px;" />
                        </td>
                    </tr>
                    ## <tr>
                    ##     <td align="right">发文文号：</td>
                    ##     <td>
                    ##         <input id="docNumber" name="$qc.like('docNumber')" class="easyui-textbox" style="width:350px;" />
                    ##     </td>
                    ## </tr>
                    <tr>
                        <td align="right">公文类型：</td>
                        <td align="left">
                            <select id="envStatus" name="$qc.equal('documentType')" class="easyui-combobox" data-options="editable:false" style="width:150px;"
                                panelheight="auto">
                                #formoption("" $dict.RemoteDocSwapType)
                            </select>
                        </td>
                    </tr>
                    #else #end
                </table>
             </form>
            <div id="bnts" style="top:0px; height:25px; width:auto;">
                <a class="new-but" onclick="formSerach()">确定</a>
                <a class="new-but" onclick="reset()">重置</a>
            </div>
        </div>
    </div>
</div>
#parse("doc/remotedocswap/crud.js.vm")
#@script()
<script type="text/javascript">
    $(function () { // 给查询dialog中的 标题input 绑定回车事件
        $('#title').textbox('textbox').keydown(function (e) {
            if (e.keyCode == 13) {
               formSerach();
            }
        });
    })

    var _baseUrl = '$link.getContextURL()/remotedocswap';
    var _listJsonUrl = '/list.json';
    var _newJsonUrl = '/new';

    $("a[select-dialog]").each(function() {
        $(this).click(function(){
            var $this = $(this);
            var _callbackname = $this.attr("callback");
            var _url = $this.attr("select-dialog");
            var _callback_fn = window[_callbackname];
            var dfn = top.window.openSelectDialogFrameDialog;
            if (typeof dfn === "function") {
                dfn(_url, _callback_fn);
            }
            return false;
        })
    });
    /*状态格式化*/
    function statusFormatter(value, row, index) {
        if (value == "暂存") {
            return '<font color="blue">' + value + '</font>';
        } else if (value == "未签收") {
            return '<font color="red">' + value + '</font>';
        } else {
            return value;
        }
    }
	
    /*总剩余天数格式化*/
    function limitTimeFormatter(value, row, index) {
         return value;
    }

    function fnSelectDepCallback(obj){
        $("#department").textbox('setValue',obj.id);
        $("#department").textbox('setText',obj.text);
    }

    function attFlag(value,row,index){
        if(value == '有附件') {
            return "<img src='images/attach.png' title='有附件'/>";
        }
    }

    function formSerach() {
        $('#searchDialog').window('close');
        $('#dg').datagrid('reload');
    }

    function reset(){
        var _qf = $("#queryForm");
        _qf.form("clear");
        $(".easyui-combobox",_qf).each(function(){
            $(this).combobox("select"," ");
        });
    }
	
	//列表操作
	function rowformater(value, row, index){
		return $(".cc-operateColum").html().replace(new RegExp("__id__",'gm'),row.id);
	} 
	
	//签收
    function feedBackDialog(envelopeId){
        alert("签收："+envelopeId);
    }

    //退回
    function returnEnvelope(envelopeId){
        alert("退回："+envelopeId);
    }
</script>
#end
