#@script()
<script type="text/javascript">
    $(function () { // 给查询dialog中的 标题input 绑定回车事件
        $('#title').textbox('textbox').keydown(function (e) {
            if (e.keyCode == 13) {
               formSerach();
            }
        });
    })

    var _baseUrl = '$link.getContextURL()/remotedocswap';
    var _listJsonUrl = '/listDocReceiveFinish.json';

    $("a[select-dialog]").each(function() {
        $(this).click(function(){
            var $this = $(this);
            var _callbackname = $this.attr("callback");
            var _url = $this.attr("select-dialog");
            var _callback_fn = window[_callbackname];
            var dfn = top.window.openSelectDialogFrameDialog;
            if (typeof dfn === "function") {
                dfn(_url, _callback_fn);
            }
            return false;
        })
    });
       
    /*发送时间格式化*/
    function sendTimeFormatter(value, row, index) {
		return new Date(value).toLocaleString(); 
    }

    /* 签收时间格式化*/
    function signDateFormatter(value, row, index) {
		 if(null != value){
  	     	return new Date(value).toLocaleString(); 
		 }else{
		 	return '';
		 }
    }
 

    /*分类格式化*/
    function receiveFlagFormatter(value, row, index) {
		if("接收" == value){
			return "电子";
		}
		else if("纸质公文" == value){
			return "纸质";
		}
    }
	
    /*超时情况格式化*/
    function limitTimeFormatter(value, row, index) {
		if(row.limitTime && row.finishTime){
            var day = daysBetween(row.finishTime,row.limitTime);
            if(day<0)
                return '<span style="color: red;">超时</span>';
			else
                return '<span style="color: green;">未超时</span>';;
		}
    }
	 
	/**
    * 根据两个日期，判断相差天数
    * @param sDate1 开始日期 如：2016-11-01
    * @param sDate2 结束日期 如：2016-11-02
    * @returns {number} 返回相差天数
    */
	function daysBetween(sDate1,sDate2){
        //Date.parse() 解析一个日期时间字符串，并返回1970/1/1 午夜距离该日期时间的毫秒数
        var time1 = Date.parse(new Date(sDate1));
        var time2 = Date.parse(new Date(sDate2));
        var nDays = parseInt((time2 - time1)/1000/3600/24);
        return  nDays;
    };

    function fnSelectDepCallback(obj){
        $("#department").textbox('setValue',obj.id);
        $("#department").textbox('setText',obj.text);
    }

    function formSerach() {
        $('#searchDialog').window('close');
        $('#dg').datagrid('reload');
    }

    function reset(){
        var _qf = $("#queryForm");
        _qf.form("clear");
        $(".easyui-combobox",_qf).each(function(){
            $(this).combobox("select"," ");
        });
    }
	
	//列表操作
	function rowformater(value, row, index){
		return $(".cc-operateColum").html().replace(new RegExp("__id__",'gm'),row.id);
	} 
 
	function getRowIdByDom(dom){
        var tr =$(dom).parent().parent().parent();
        return tr.attr("datagrid-row-index");
    }
	
    function detailRow(index){
        $('#dg').datagrid('clearSelections');
        _datagrid.datagrid("selectRow",index);
        var row = _datagrid.datagrid("getSelected");
		
		if("纸质公文" == row.receiveFlag){
			url = "$link.getContextURL()/remotedocswap/detailDocSwap?id="+row.id + "&queryFlag=paperDoc";
		}else{
			url = "$link.getContextURL()/remotedocswap/detailDocSwap?id="+row.id + "&queryFlag=send";
		}
        
        top.CC.addTab({title:'公文交换详情',url:url});
    }
	
    function detailUrl(value,row) {
        var display = "<span><font color=red>[置顶]</font></span>";
        if ("置顶" == row.displayType) {
            return display + "<a href='javascript:;' class='font-titlecolor' onclick='detailRow(getRowIdByDom(this))'>"+value+"</a>";
        } else {
            return "<a href='javascript:;' class='font-titlecolor' onclick='detailRow(getRowIdByDom(this))'>"+value+"</a>";
        }
    }
</script>
#end
