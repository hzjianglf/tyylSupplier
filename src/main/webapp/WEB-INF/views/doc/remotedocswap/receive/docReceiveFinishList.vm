<div class="easyui-layout" fit="true">
    <div id="tb" class="top-menu datagrid-toolbar toolbar-borderbottom">
        <a  onclick="$('#searchDialog').css('display','block');$('#searchDialog').window('center');$('#searchDialog').window('open');"
             class="easyui-linkbutton l-btn-plain-search" data-options="iconCls:'icon-search',plain:true">查询</a>
		<a  onclick="top.CC.closeCurTab()"
             class="easyui-linkbutton l-btn-plain-search" data-options="iconCls:'icon-quit-small',plain:true">关闭</a>
    </div>
    <div class="cc-tableWrap" data-options="region:'center',border:false" style="padding:5px;">
        <table id="dg" data-options="nowrap:false" style="width:99%;">
            <thead>
            <tr>
                ##<th style="width:5" data-options="field:'attachFlag',formatter:attFlag"><img src='images/attach.png' title='有附件'/></th>
				<th style="width:35%" data-options="field:'title',formatter:detailUrl,sortable:true">公文标题</th>
                <th style="width:16%" data-options="field:'senderAncestorName'">来文单位</th>
				<th style="width:11%" data-options="field:'sendTime',formatter:sendTimeFormatter,sortable:true">发送时间</th>
				<th style="width:6%" data-options="field:'signerName'">签收人</th>
				<th style="width:11%" data-options="field:'signDate',formatter:signDateFormatter,sortable:true">签收时间</th>
				<th style="width:5%" data-options="field:'documentType'">公文类型</th>
				<th style="width:5%" data-options="field:'receiveFlag',formatter:receiveFlagFormatter">分类</th>
				<th style="width:5%" data-options="field:'envStatus'">办结情况</th>
				<th style="width:5%" data-options="field:'limitTime',formatter:limitTimeFormatter">超时情况</th>
            </tr>
            </thead>
        </table>
    </div>
    <div id="searchDialog" class="easyui-dialog  dialog-tc" title="查询条件" data-options="modal:true,closed:true,collapsible:false,minimizable:false,maximizable:false,buttons:'#bnts'"
         style="width:500px;height:420px;padding:20px 10px; background-color:#f4f4f4;display:none">
        <form id="queryForm">
            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td align="right">公文标题：</td>
                    <td colspan="3"><input id="title" name="title" style="width:320px;" class="easyui-textbox" /></td>
                </tr>
				<tr>
                    <td align="right">来文单位：</td>
                    <td align="left" style="width:150px;">
						<input id="secondaryUnitIdentifierName" name="senderAncestorName" style="width:150px;" class="easyui-textbox" />
					</td>
                    <td align="right" style="width:80px;">签收人：</td>
                    <td align="left">
						<input id="secondaryUnitIdentifierName" name="signerName" style="width:90px;" class="easyui-textbox" />
					</td>
                </tr>
				<tr>
                    <td align="right">发送时间：</td>
                    <td align="left" colspan="3">
                        <input name="sendBeginTime" class="easyui-datebox" value="$!{firstDay}" data-options="editable:false" style="width:150px;">
							至
                        <input name="sendEndTime" class="easyui-datebox" value="$!{lastDay}" data-options="editable:false" style="width:150px;">
                    </td>
                </tr>
				<tr>
                    <td align="right">限办时间：</td>
                    <td align="left" colspan="3">
                        <input name="limitBeginTime" class="easyui-datebox" data-options="editable:false" style="width:150px;">
							至
                        <input name="limitEndTime" class="easyui-datebox" data-options="editable:false" style="width:150px;">
                    </td>
                </tr>
				<tr>
                    <td align="right">签收时间：</td>
                    <td align="left" colspan="3">
                        <input name="signBeginDate" class="easyui-datebox" data-options="editable:false" style="width:150px;">
							至
                        <input name="signEndDate" class="easyui-datebox" data-options="editable:false" style="width:150px;">
                    </td>
                </tr>
				<tr>
                    <td align="right">公文类型：</td>
                    <td align="left" style="width:150px;">
                        <select id="envStatus" name="documentType" class="easyui-combobox" data-options="editable:false" style="width:150px;"
                            panelheight="auto">
                            #formoption("" $dict.RemoteDocSwapType)
                        </select>
                    </td>
					<td align="right">反馈情况：</td>
                    <td align="left">
                        <select name="envStatus" class="easyui-combobox" data-options="editable:false" style="width:90px;"
                            panelheight="auto">
							<option value="" selected>全部</option>
                            <option value="3">已办结</option>
                            <option value="4">已撤销</option>
                            <option value="5">已作废</option>
                            <option value="6">不办理</option>
                            <option value="7">转阅件</option>
                            <option value="8">办结（传阅）</option>
                            <option value="9">办结（归档）</option>
                            <option value="10">已退回</option>
                        </select>
                    </td>
                </tr>
				<tr>
					<td align="right">公文分类：</td>
                    <td align="left">
                        <select name="receiveFlag" class="easyui-combobox" data-options="editable:false" style="width:150px;"
                            panelheight="auto">
							<option value="" selected>全部</option>
                            <option value="1">电子</option>
                            <option value="3">纸质</option>
                        </select>
                    </td>
					<td align="right">是否超时：</td>
                    <td align="left" >
                        <select id="overTimeFlag" name="overTimeFlag" class="easyui-combobox" data-options="editable:false" style="width:90px;"
                            panelheight="auto">
                            <option value="" selected>全部</option>
                            <option value="0">超时</option>
                            <option value="1">未超时</option>
                        </select>
                    </td>
					
                </tr>
            </table>
         </form>
        <div id="bnts" style="top:0px; height:25px; width:auto;">
            <a class="new-but" onclick="formSerach()">确定</a>
            <a class="new-but" onclick="reset()">重置</a>
        </div>
    </div>
</div>
