<div class="easyui-layout" fit="true">
    <div id="tb" class="top-menu datagrid-toolbar toolbar-borderbottom">
        <a  onclick="$('#searchDialog').css('display','block');$('#searchDialog').window('center');$('#searchDialog').window('open');"
             class="easyui-linkbutton l-btn-plain-search" data-options="iconCls:'icon-search',plain:true">查询</a>
        <a href="javascript:;" class="easyui-linkbutton" iconCls="icon-info-sign"
			 plain="true">批量签收</a>
		
		<a  onclick="top.CC.closeCurTab()"
             class="easyui-linkbutton l-btn-plain-search" data-options="iconCls:'icon-quit-small',plain:true">关闭</a>
    </div>
    <div class="cc-tableWrap" data-options="region:'center',border:false" style="padding:5px;">
        <table id="dg" data-options="nowrap:false" style="width:99%;">
            <thead>
            <tr>
                ##<th style="width:5" data-options="field:'attachFlag',formatter:attFlag"><img src='images/attach.png' title='有附件'/></th>
				<th style="width:36%" data-options="field:'title',formatter:detailUrl,sortable:true">公文标题</th>
                <th style="width:20%" data-options="field:'senderAncestorName'">来文单位</th>
				<th style="width:12%" data-options="field:'sendTimeShow',sortable:true">发送时间</th>
				<th style="width:13%" data-options="field:'limitTimeShow',formatter:limitTimeFormatter,sortable:true">总剩余天数</th>
				<th style="width:5%" data-options="field:'documentType'">公文类型</th>
				<th style="width:10%" data-options="field:'id',align:'center',formatter:rowformater">操作</th>  
                 
			 
            </tr>
            </thead>
        </table>
		<div class="cc-signOperateColum">
          <a  href='javascript:;' class="easyui-linkbutton" iconCls="icon-edit" 
            plain="true" onclick="feedBackDialog('__id__')">签收
          </a>
		   
        </div>
		<div class="cc-returnOperateColum1">
         
		  <a  href='javascript:;' class="easyui-linkbutton" iconCls="icon-edit" 
            plain="true" onclick="returnEnvelope('__id__')">退回
          </a>
        </div>
    </div>
    <div id="searchDialog" class="easyui-dialog  dialog-tc" title="查询条件" data-options="modal:true,closed:true,collapsible:false,minimizable:false,maximizable:false,buttons:'#bnts'"
         style="width:500px;height:350px;padding:20px 10px; background-color:#f4f4f4;display:none">
        <form id="queryForm">
			<input type="hidden" id="envelopeIds" name="envelopeIds" value=""/>
            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td align="right">公文标题：</td>
                    <td><input id="title" name="$qc.like('title')" style="width:320px;" class="easyui-textbox" /></td>
                </tr>
                <tr>
                    <td align="right">来文单位：</td>
                    <td>
                        <input id="senderAncestorName" name="$qc.like('senderAncestorName')" class="easyui-textbox" style="width:320px;" />
                    </td>
                </tr>
				<tr>
                    <td align="right">发送时间：</td>
                    <td align="left" colspan="3">
                        <input name="$qc.greaterThanOrEqualTo('sendTime')" class="easyui-datebox" data-options="editable:false" style="width:150px;">
							至
                        <input name="$qc.lessThanOrEqualTo('sendTime')" class="easyui-datebox" data-options="editable:false" style="width:150px;">
                    </td>
                </tr>
                <tr>
                    <td align="right">限办时间：</td>
                    <td align="left" colspan="3">
                        <input name="$qc.greaterThanOrEqualTo('limitTime')" class="easyui-datebox" data-options="editable:false" style="width:150px;">
							至
                        <input name="$qc.lessThanOrEqualTo('limitTime')" class="easyui-datebox" data-options="editable:false" style="width:150px;">
                    </td>
                </tr>
                <tr>
                    <td align="right">公文类型：</td>
                    <td align="left">
                        <select id="envStatus" name="$qc.equal('documentType')" class="easyui-combobox" data-options="editable:false" style="width:150px;"
                            panelheight="auto">
                            #formoption("" $dict.RemoteDocSwapType)
                        </select>
                    </td>
                </tr>
            </table>
         </form>
        <div id="bnts" style="top:0px; height:25px; width:auto;">
            <a class="new-but" onclick="formSerach()">确定</a>
            <a class="new-but" onclick="reset()">重置</a>
        </div>
    </div>
</div>

<div id="editWindow" class="easyui-window" title="签收" style="width:700px;height:220px;padding:5px"
    data-options="closed:true,modal:true,minimizable:false,maximizable:false,collapsible:false">
</div>
#parse("doc/remotedocswap/crud.js.vm")
#@script()
<script type="text/javascript">
    $(function () { // 给查询dialog中的 标题input 绑定回车事件
        $('#title').textbox('textbox').keydown(function (e) {
            if (e.keyCode == 13) {
               formSerach();
            }
        });
    })

    var _baseUrl = '$link.getContextURL()/remotedocswap';
    var _listJsonUrl = '/listSign.json';

    $("a[select-dialog]").each(function() {
        $(this).click(function(){
            var $this = $(this);
            var _callbackname = $this.attr("callback");
            var _url = $this.attr("select-dialog");
            var _callback_fn = window[_callbackname];
            var dfn = top.window.openSelectDialogFrameDialog;
            if (typeof dfn === "function") {
                dfn(_url, _callback_fn);
            }
            return false;
        })
    });
 
    /*总剩余天数格式化*/
    function limitTimeFormatter(value, row, index) {
		var limitDays = row.calDeadlineDay;
		if(value && limitDays > 0){
			return limitDays + '天<br>[' + value + ']';
		}else if(value && limitDays == 0){
			return '<font color="red">今天</font><br>[' + value + ']';
		}else if(value && limitDays < 0){
			return '<font color="red">超时' + limitDays*-1 + '天</font><br>[' + value + ']';
		}else{
			return '非限时';
		}
	}
	
  	//查询
    function formSerach() {
        $('#searchDialog').window('close');
        $('#dg').datagrid('reload');
    }

	//重置
    function reset(){
        var _qf = $("#queryForm");
        _qf.form("clear");
        $(".easyui-combobox",_qf).each(function(){
            $(this).combobox("select"," ");
        });
    }
	
	//列表操作
	function rowformater(value, row, index){
		
		var signOperate = $(".cc-signOperateColum").html().replace(new RegExp("__id__",'gm'),row.id);
		var returnOperate = $(".cc-returnOperateColum1").html().replace(new RegExp("__id__",'gm'),row.id);
		
		var allOperate = '';
		if(null == row.instId){
			allOperate = signOperate + returnOperate;
		}else{
			allOperate = returnOperate;
		}
		return allOperate;
	} 
	
	//签收
    function feedBackDialog(envelopeId){
		$('#editWindow').panel({title:"签收"});
		$('#editWindow').panel('resize',{
            width: 700,
            height: 220
        });
		$('#editWindow').window('open');
        $('#editWindow').window('refresh','$link.getContextURL()/remotedocswap/detailFeedBackPage?id=' + envelopeId +  '&type=receiveDocSwap');
  
    }

    //退回
    function returnEnvelope(envelopeId){
        $('#editWindow').panel({title:"退回"});
		$('#editWindow').panel('resize',{
            width: 700,
            height: 250
        });
		$('#editWindow').window('open');
        $('#editWindow').window('refresh','$link.getContextURL()/remotedocswap/detailFeedBackPage?id=' + envelopeId +  '&type=returnEnvelope');
    }
	
	function getRowIdByDom(dom){
        var tr =$(dom).parent().parent().parent();
        return tr.attr("datagrid-row-index");
    }
	
    function detailRow(index){
        $('#dg').datagrid('clearSelections');
        _datagrid.datagrid("selectRow",index);
        var row = _datagrid.datagrid("getSelected");
        url = "$link.getContextURL()/remotedocswap/detailDocSwap?id="+row.id + "&queryFlag=sign";
        top.CC.addTab({title:'签收详情',url:url});
    }
	
    function detailUrl(value,row) {
        var display = "<span><font color=red>[置顶]</font></span>";
        if ("置顶" == row.displayType) {
            return display + "<a href='javascript:;' class='font-titlecolor' onclick='detailRow(getRowIdByDom(this))'>"+value+"</a>";
        } else {
            return "<a href='javascript:;' class='font-titlecolor' onclick='detailRow(getRowIdByDom(this))'>"+value+"</a>";
        }
    }
	
	var _btnBatchSign = $("[iconCls='icon-info-sign']",_toolbar);
    if(_btnBatchSign){
        _btnBatchSign.on("click",batchSign);
    }
		
	//批量签收
	function batchSign(){
            var rows = $("#dg").datagrid("getChecked");
            if(rows && rows.length > 0){
                $.messager.confirm('警告','是否签收勾选的公文?',function(r){
                    if (r){
                        var ids = "";
                        for(var i=0;i<rows.length;i++){
                            if(i==rows.length-1){
                                ids += rows[i].id;
                            }else{
                                ids += rows[i].id + ",";
                            }
                        }
						$("#envelopeIds").val(ids);
						batchSignSend();
                    }
                });
            } else {
                top.CC.messager({
                    title: '提示',
                    msg: '请选择至少一条数据进行签收!'
                });
            }

        }
		
	//发送
    function batchSignSend(){
        top.CC.loading("发送中...");
          $.post("$link.getContextURL()/remotedocswap/saveReceiveDocSwap.json",$("#queryForm").serialize(),function(result){
            top.CC.loaded();
            if(result.id){
              $('#editWindow').window('close');
              top.CC.messager({
                  title:'提示',
                  msg:'发送成功！'
              });
			  top.CC.addTab({title:'已签收查询',url:'$link.getContextURL()/remotedocswap/docReceive/list'});
        	  top.CC.closeTab('签收详情');
            }else{
              top.CC.messager({
                  title:'提示',
                  msg:'服务器连接不上'
              });
            }
          });
    }
</script>
#end
