#@script()
<script>
    //全局变量覆盖：_baseUrl_assess，_delJsonUrl,_newJsonUrl,_editJsonUrl,_listJsonUrl

    //对页面的条件查询/查询的function()方法
    $(document).ready(function(){
        var _datagrid_assess = $("#dg_assess");
        var _querForm = $("#queryForm_assess");
        var _toolbar = $("#tb_assess");

        //查询相关方法
        var _btnSearch = $("[iconCls='icon-search']",_querForm);
        var _btnClear = $("[iconCls='icon-undo']",_querForm);
        if(_btnSearch){
            _btnSearch.on('click',formSearch_assess);
        }
        if(_btnClear){
            _btnClear.on('click',reset_assess);
        }
        function addPageCondition(param){
            $.extend(param,getConditions());
        }
        function getConditions(){
            var f = _querForm.serializeArray();
            var searchConditions = {};
            for(var i = 0;i< f.length;i++){
                searchConditions[f[i].name] = f[i].value;
            }
            return searchConditions;
        }
        function formSearch_assess() {
            _datagrid_assess.datagrid('reload');
        }
        function reset_assess(){
            var _qf = $("#queryForm_assess");
            _qf.form("clear");
            $(".easyui-combobox",_qf).each(function(){
                $(this).combobox("select"," ");
            });
        }

        //工具条操作
        var _btnAdd = $("[iconCls='icon-add']",_toolbar);
        var _btnDelete = $("[iconCls='icon-remove']",_toolbar);
        var _btnEdit = $("[iconCls='icon-edit']",_toolbar);
        if(_btnAdd){
            _btnAdd.on("click",add);
        }
        if(_btnDelete){
            _btnDelete.on("click",del);
        }
        if(_btnEdit){
            _btnEdit.on("click",edit);
        }

        function edit(){
            var rows = $("#dg_assess").datagrid("getChecked");
            if(rows){
                if (rows.length < 1) {
                    top.CC.messager({
                        title: '错误',
                        msg: '请选择至少一条数据进行修改!'
                    });
                } else if (rows.length > 1) {
                    top.CC.messager({
                        title: '错误',
                        msg: '只能对一条数据进行修改!'
                    });
                } else {
                    var noticeId = "";
                    for(var i=0;i<rows.length;i++){
                        if(i==rows.length-1){
                            noticeId += rows[i].id;
                        }
                    }
                    var url = _baseUrl_assess + (_editJsonUrl || '/edit?id=' + noticeId);
                    top.CC.addTab({title:'考核情况编辑',url:url});
                }

            } else {
                top.CC.messager({
                    title: '错误',
                    msg: '服务器连接不上!'
                });
            }

        }
        function del(){
            var rows = $("#dg_assess").datagrid("getChecked");
            if(rows && rows.length > 0){
                $.messager.confirm('警告','确定删除选择的考核情况吗?',function(r){
                    if (r){
                        var ids = "";
                        for(var i=0;i<rows.length;i++){
                            if(i==rows.length-1){
                                ids += rows[i].id;
                            }else{
                                ids += rows[i].id + ",";
                            }
                        }
                        top.CC.loading("删除中，请稍后...");
                        $.post(_baseUrl_assess + (_delJsonUrl || '/delete.json'),{ids:ids},function(result){
                            top.CC.loaded();
                            if (result.success){
                                $('#dg_assess').datagrid('reload'); // reload the user data
                                $('#dg_assess').datagrid('uncheckAll');
                                top.CC.messager({ // show error message
                                    title: '成功',
                                    msg: '删除成功!'
                                });
                            } else {
                                top.CC.messager({ // show error message
                                    title: '错误',
                                    msg: result.error
                                });
                            }
                        },'json');
                    }
                });
            } else {
                top.CC.messager({
                    title: '错误',
                    msg: '请选择至少一条数据进行删除!'
                });
            }

        }

        function add(){
            var params = "";
            var unitId = $("#unitId").val();
            if (unitId) {
                params = "?unitId=" + unitId;
            }else{
				top.CC.messager({ // show error message
                    title: '错误',
                    msg: '请先选择单位!'
                });
				return;
			}
            var url = _baseUrl_assess + (_newJsonUrl || "/new") + params;
            top.CC.addTab({title:"考核情况编辑",url:url});
        }

        //初始化datagrid
        _datagrid_assess.datagrid({
            loadFilter: datagridHtmlEncode,
            fitColumns:true,//列宽自适应
            fit:true,//自适应
            nowrap:false, //不可换行
            rownumbers:true,//行号
            singleSelect:false,//单选
            idField:'id',
            pagination:true,//显示分页工具条
            toolbar:'#tb_assess',//工具条
            pageSize:20,//每页记录数
            pageList:[20,30],//可选每页记录数
            url:_baseUrl_assess + (_listJsonUrl || '/list.json'),//获取数据的url
            onBeforeLoad:addPageCondition//提交查询时追加翻页条件
        });
    });
    var _baseUrl_assess, _delJsonUrl, _newJsonUrl, _editJsonUrl, _listJsonUrl, _detailJsonUrl;

    //行内操作的方法，编辑、详情
    var _datagrid_assess = $("#dg_assess");
    var _toolbar = $("#tb_assess");
    function operaterFormatter(value,row,index){
        return $(".cc-operateColum",_datagrid_assess.parents(".cc-tableWrap")).html();
    }
    function getRowIdByDom(dom){

        var tr =$(dom).parent().parent().parent();
        return tr.attr("datagrid-row-index");
    }
    function detailRow_assess(index){
        $('#dg_assess').datagrid('clearSelections');
        _datagrid_assess.datagrid("selectRow",index);
        var row = _datagrid_assess.datagrid("getSelected");
        var url;
        url = "$link.getContextURL()/supplier/assess/detail?id="+row.id;
        top.CC.addTab({title:'考核情况详情',url:url});

    }
    function detailUrl_assess(value,row) {
           return "<a href='javascript:;' class='font-titlecolor'  onclick='detailRow_assess(getRowIdByDom(this))'>"+value+"</a>";
    }
	
	
</script>
#end