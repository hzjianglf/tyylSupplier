<script>
    // 重写search方法
    function formSerach() {
        $("#groupId").val("");
        $("#type").val("");
        $("#department").val("");
        var f = $("#queryForm").serializeArray();
        var obj ={};
        for(var i = 0;i< f.length;i++){
            obj[f[i].name] = f[i].value;
        }
        $('#datasDg').datagrid('reload',obj);
        $('#menutree').find('.tree-node-selected').removeClass('tree-node-selected'); ##取消树选中
        return false;
    }
</script>
